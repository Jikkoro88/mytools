[mysqld]
core_file

datadir = /var/lib/mysql
default-table-type = myisam
table_cache=2048
join_buffer_size=64K
record_buffer=128K
sort_buffer=2M
tmp_table_size=100M
skip-name-resolve

myisam_sort_buffer_size=100M
# myisam_max_sort_file_size=10000
# myisam_max_extra_sort_file_size=10000

max_heap_table_size=1000M
max_tmp_tables=100
tmpdir = /export/hda3/tmp/
max_connections=500
thread_cache_size=100
key_buffer_size=500M

innodb_flush_log_at_trx_commit = 2
innodb_data_home_dir = /var/lib/mysql
innodb_log_group_home_dir = /var/lib/mysql/innodb_logs
innodb_log_files_in_group=2
innodb_log_buffer_size=10M
innodb_additional_mem_pool_size=100M
innodb_lock_wait_timeout=50
innodb_data_file_path = innodb_data1:200M:autoextend
innodb_buffer_pool_size=8192M
innodb_log_file_size=1900M

innodb_thread_concurrency = 0
innodb_file_per_table
innodb_open_files = 768

# innodb_read_io_threads = 4
# innodb_write_io_threads = 4
# innodb_io_capacity = 1000

